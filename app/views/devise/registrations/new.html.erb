<div class="form">
  <ul class="tab-group">
    <li class="tab">
      <%= link_to( "Log in", new_user_session_path, :method => :get)%>
    </li>
    <li class="tab active">
      <%= link_to("Sign up", new_user_registration_path, :method => :get )%>
    </li>
  </ul>
  
  <div class="tab-content">
    <!-- <div id="signup">    -->
      <h1>Sign Up for Free</h1>
      <%= form_for(resource, as: resource_name, :html => {:class => 'form-horizontal'}, url: registration_path(resource_name)) do |f| %>
      <div class="panel-body" >
        <%= devise_error_messages! %>
        <div class="top-row">
          <div class="field-wrap">
            <label>
              First Name<span class="req">*</span>
            </label>
            <%= f.text_field :first_name, :required => true, :autocomplete => "off", autofocus: true %>
          </div>
      
          <div class="field-wrap">
            <label>
              Last Name<span class="req">*</span>
            </label>
            <%= f.text_field :last_name, :required => true, :autocomplete => "off"%>
          </div>
        </div>

        <div class="field-wrap">
           <label>
              Contact Number<span class="req">*</span>
            </label>
            <%= f.text_field :contact_number,  :required => true, :autocomplete => "off"%>
        </div>
        <div class="field-wrap">
          <label>
              Employer Name<span class="req">*</span>
            </label>
            <%= f.text_field :employer_name, :required => true, :autocomplete => "off" %>
        </div>
        <div class="field-wrap">
          <label>
            Email Address<span class="req">*</span>
          </label>
          <%= f.email_field :email, :required => true, :autocomplete => false%>
        </div>

        <div class="field-wrap">
          <label>
            Password<span class="req">*</span>
          </label>
            <%= f.password_field :password, autocomplete: "off", :required => true%>
            <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      

        <div class="field-wrap">
          <label>
            Password Confirmation<span class="req">*</span>
          </label>
          <%= f.password_field :password_confirmation, autocomplete: "off", :required => true%>
        </div>

        <%= f.submit "Sign up", class: 'button button-block' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
