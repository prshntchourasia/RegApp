<div class="container " style="border-style: groove;">
  <h2 class="align-center">SIGN UP</h2>
  <%= form_for(resource, as: resource_name, :html => {:class => 'form-horizontal'}, url: registration_path(resource_name)) do |f| %>
    <div class="panel-body" >
        
        <!-- <p 1class="alert alert-danger"> -->
          <%= devise_error_messages! %>
        <!-- </p> -->

      <!-- start of adding custom field -->
      <div class="field form-group">
        <label for="first_name" class="control-label col-sm-2 ">First Name:</label>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: 'form-control ' %>
        </div>
      </div>
      <div class="field">
        <label for="last_name" class="control-label col-sm-2">Last Name:</label>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
      <div class="field">
        <label for="contact_number" class="control-label col-sm-2">Contact Number:</label>
        <div class="col-sm-10">
          <%= f.text_field :contact_number, class: 'form-control' %>
        </div>
      </div>
      <div class="field">
        <label for="employer_name" class="control-label col-sm-2">Employer Name:</label>
        <div class="col-sm-10">
          <%= f.text_field :employer_name, class: 'form-control' %>
        </div>
      </div>

      <!-- end of added custom -->
      <div class="field form-group">
        <label for="email" class="control-label col-sm-2">Email:</label>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

      </div>
      <div class="field form-group">
        <label for="password" class="control-label col-sm-2">Password:</label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>        
      </div>

      <div class="field form-group">
        <label for="password_confirmation" class="control-label col-sm-2">Password Confirmation:</label>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>

      <div class="actions align-center">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>



<%= render "devise/shared/links" %>
